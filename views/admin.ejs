<!DOCTYPE html>
<html lang="de" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Doktorum nerede</title>
    <link href="/css/output.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="h-full bg-gray-50 font-sans antialiased">
    <div class="min-h-screen">
        <!-- Header -->
        <nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-10 py-3 sm:py-4">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 sm:gap-0">
                    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Admin Dashboard</h1>
                    <div class="flex flex-wrap items-center gap-2 sm:gap-4 sm:space-x-4">
                        <button onclick="showChangePasswordModal()" class="text-blue-600 hover:text-blue-700 font-bold text-sm sm:text-base transition-all duration-200 ease-in-out">Passwort ändern</button>
                        <a href="/" class="text-blue-600 hover:text-blue-700 font-bold text-sm sm:text-base transition-all duration-200 ease-in-out">Zur Hauptseite</a>
                        <form action="/logout" method="POST" class="inline">
                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm sm:text-base">Abmelden</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

        <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-10 py-6 sm:py-8">
            <div class="bg-white shadow-md rounded-2xl p-4 sm:p-6 hover:shadow-lg transition-all duration-200 ease-in-out">
                <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">Ärzteverwaltung</h2>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="mb-4 sm:mb-6 rounded-xl bg-green-50 p-3 sm:p-4 border border-green-200">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-base font-bold text-green-800"><%= success %></h3>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Filter und Suche -->
                <div class="mb-4 sm:mb-6">
                    <input type="text" id="searchInput" placeholder="Suche nach Name oder E-Mail" 
                        class="w-full border border-gray-300 rounded-lg p-3 text-base font-medium text-gray-900 placeholder:text-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 ease-in-out">
                </div>

                <!-- Ärzteliste -->
                <div class="overflow-x-auto -mx-4 sm:mx-0">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 hidden sm:table-header-group">
                            <tr>
                                <th class="px-3 sm:px-6 py-3 sm:py-4 text-left text-sm sm:text-base font-bold text-gray-900">Name</th>
                                <th class="px-3 sm:px-6 py-3 sm:py-4 text-left text-sm sm:text-base font-bold text-gray-900">E-Mail</th>
                                <th class="px-3 sm:px-6 py-3 sm:py-4 text-left text-sm sm:text-base font-bold text-gray-900">Status</th>
                                <th class="px-3 sm:px-6 py-3 sm:py-4 text-left text-sm sm:text-base font-bold text-gray-900">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody id="doctorTable" class="bg-white divide-y divide-gray-200">
                            <% doctors.forEach(doctor => { %>
                                <tr class="hover:bg-gray-50 transition-all duration-200 ease-in-out">
                                    <!-- Desktop: Separate columns -->
                                    <td class="px-3 sm:px-6 py-3 sm:py-4 text-sm sm:text-base font-bold text-gray-900 hidden sm:table-cell">
                                        <%= doctor.title %> <%= doctor.academicTitle %> <%= doctor.firstName %> <%= doctor.lastName %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 sm:py-4 text-sm sm:text-base font-medium text-gray-800 hidden sm:table-cell">
                                        <%= doctor.email %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 sm:py-4 hidden sm:table-cell">
                                        <% if (doctor.isApproved) { %>
                                            <span class="inline-flex items-center rounded-full bg-green-50 px-2 sm:px-3 py-1 text-xs sm:text-sm font-bold text-green-700 border border-green-200">Freigegeben</span>
                                        <% } else { %>
                                            <span class="inline-flex items-center rounded-full bg-yellow-50 px-2 sm:px-3 py-1 text-xs sm:text-sm font-bold text-yellow-700 border border-yellow-200">Ausstehend</span>
                                        <% } %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 sm:py-4 hidden sm:table-cell">
                                        <div class="flex gap-2">
                                            <a href="/admin/edit/<%= encodeURIComponent(doctor.email) %>" 
                                               class="bg-teal-600 hover:bg-teal-700 text-white font-bold px-3 py-1.5 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out inline-block text-sm whitespace-nowrap">Bearbeiten</a>
                                            <% if (!doctor.isApproved) { %>
                                                <button onclick="approveDoctor('<%= doctor.email %>')" 
                                                        class="bg-cyan-600 hover:bg-cyan-700 text-white font-bold px-3 py-1.5 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm whitespace-nowrap">Freigeben</button>
                                            <% } else { %>
                                                <button onclick="disapproveDoctor('<%= doctor.email %>')" 
                                                        class="bg-sky-600 hover:bg-sky-700 text-white font-bold px-3 py-1.5 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm whitespace-nowrap">Sperren</button>
                                            <% } %>
                                            <button onclick="deleteDoctor('<%= doctor.email %>')" 
                                                    class="bg-rose-600 hover:bg-rose-700 text-white font-bold px-3 py-1.5 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm whitespace-nowrap">Löschen</button>
                                        </div>
                                    </td>
                                    <!-- Mobile: Combined layout -->
                                    <td class="px-3 py-3 sm:hidden">
                                        <div class="space-y-2">
                                            <!-- First line: Name and Email -->
                                            <div class="flex flex-col gap-1">
                                                <div class="font-bold text-sm text-gray-900"><%= doctor.title %> <%= doctor.academicTitle %> <%= doctor.firstName %> <%= doctor.lastName %></div>
                                                <div class="text-xs font-medium text-gray-600"><%= doctor.email %></div>
                                            </div>
                                            <!-- Second line: Status and Buttons -->
                                            <div class="flex flex-wrap items-center gap-2">
                                                <% if (doctor.isApproved) { %>
                                                    <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-bold text-green-700 border border-green-200">Freigegeben</span>
                                                <% } else { %>
                                                    <span class="inline-flex items-center rounded-full bg-yellow-50 px-2 py-1 text-xs font-bold text-yellow-700 border border-yellow-200">Ausstehend</span>
                                                <% } %>
                                                <a href="/admin/edit/<%= encodeURIComponent(doctor.email) %>" 
                                                   class="bg-teal-600 hover:bg-teal-700 text-white font-bold px-2 py-1 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out inline-block text-xs whitespace-nowrap">Bearbeiten</a>
                                                <% if (!doctor.isApproved) { %>
                                                    <button onclick="approveDoctor('<%= doctor.email %>')" 
                                                            class="bg-cyan-600 hover:bg-cyan-700 text-white font-bold px-2 py-1 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-xs whitespace-nowrap">Freigeben</button>
                                                <% } else { %>
                                                    <button onclick="disapproveDoctor('<%= doctor.email %>')" 
                                                            class="bg-sky-600 hover:bg-sky-700 text-white font-bold px-2 py-1 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-xs whitespace-nowrap">Sperren</button>
                                                <% } %>
                                                <button onclick="deleteDoctor('<%= doctor.email %>')" 
                                                        class="bg-rose-600 hover:bg-rose-700 text-white font-bold px-2 py-1 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-xs whitespace-nowrap">Löschen</button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div id="changePasswordModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
        <div class="relative top-10 sm:top-20 mx-auto p-4 sm:p-6 border w-11/12 sm:w-80 shadow-lg rounded-2xl bg-white max-w-sm">
            <h3 class="text-base sm:text-lg font-bold leading-6 text-gray-900 mb-4">Admin-Passwort ändern</h3>
            <form id="changePasswordForm" class="space-y-4">
                <div>
                    <label class="block text-sm sm:text-base font-bold text-gray-900 mb-2">Aktuelles Passwort</label>
                    <input type="password" name="currentPassword" required class="block w-full border border-gray-300 rounded-lg p-3 text-base font-medium focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 ease-in-out">
                </div>
                <div>
                    <label class="block text-sm sm:text-base font-bold text-gray-900 mb-2">Neues Passwort</label>
                    <input type="password" name="newPassword" required class="block w-full border border-gray-300 rounded-lg p-3 text-base font-medium focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 ease-in-out">
                </div>
                <div>
                    <label class="block text-sm sm:text-base font-bold text-gray-900 mb-2">Neues Passwort bestätigen</label>
                    <input type="password" name="confirmPassword" required class="block w-full border border-gray-300 rounded-lg p-3 text-base font-medium focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 ease-in-out">
                </div>
                <div class="flex justify-end gap-2 sm:gap-3">
                    <button type="button" onclick="closeChangePasswordModal()"
                        class="bg-gray-500 hover:bg-gray-600 text-white font-bold px-3 sm:px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm sm:text-base">
                        Abbrechen
                    </button>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-3 sm:px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 ease-in-out text-sm sm:text-base">
                        Speichern
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Suchfunktion
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#doctorTable tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        function approveDoctor(email) {
            fetch(`/admin/approve/${encodeURIComponent(email)}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Erfolg',
                        text: 'Arzt wurde freigegeben'
                    }).then(() => location.reload());
                }
            });
        }

        function disapproveDoctor(email) {
            fetch(`/admin/disapprove/${encodeURIComponent(email)}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Erfolg',
                        text: 'Freigabe wurde zurückgenommen'
                    }).then(() => location.reload());
                }
            });
        }

        function deleteDoctor(email) {
            Swal.fire({
                title: 'Sind Sie sicher?',
                text: 'Möchten Sie diesen Arzt wirklich löschen? Diese Aktion kann nicht rückgängig gemacht werden.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e11d48',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Ja, löschen',
                cancelButtonText: 'Abbrechen'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/delete/${encodeURIComponent(email)}`, {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Gelöscht',
                                text: 'Arzt wurde erfolgreich gelöscht'
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Fehler',
                                text: data.message || 'Fehler beim Löschen des Arztes'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            icon: 'error',
                            title: 'Fehler',
                            text: 'Fehler beim Löschen des Arztes'
                        });
                    });
                }
            });
        }

        function showChangePasswordModal() {
            document.getElementById('changePasswordModal').classList.remove('hidden');
        }

        function closeChangePasswordModal() {
            document.getElementById('changePasswordModal').classList.add('hidden');
            document.getElementById('changePasswordForm').reset();
        }

        document.getElementById('changePasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            if (data.newPassword !== data.confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Fehler',
                    text: 'Die neuen Passwörter stimmen nicht überein!'
                });
                return;
            }
            
            try {
                const response = await fetch('/admin/change-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        currentPassword: data.currentPassword,
                        newPassword: data.newPassword
                    })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Erfolg',
                        text: 'Passwort wurde erfolgreich geändert'
                    });
                    closeChangePasswordModal();
                } else {
                    throw new Error(result.message || 'Fehler beim Ändern des Passworts');
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Fehler',
                    text: error.message
                });
            }
        });
    </script>
</body>
</html> 
<!DOCTYPE html>
<html lang="<%= lang %>" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('doctor.profile') %> - Doktorum nerede - Avusturya</title>
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="h-full bg-gray-50 font-sans antialiased">
    <div class="min-h-screen">
        <!-- Header -->
        <nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
            <div class="mx-auto max-w-7xl px-6 py-4 sm:px-8 lg:px-10">
                <div class="flex justify-between items-center">
                    <a href="/" class="text-blue-600 hover:text-blue-700 font-semibold transition-all duration-200 ease-in-out">← <%= t('nav.backToSearch') %></a>
                    <div class="flex items-center space-x-3">
                        <a href="?lang=de" class="<%= lang === 'de' ? 'text-blue-600 font-bold' : 'text-gray-500' %> hover:text-gray-900 transition-all duration-200 ease-in-out">DE</a>
                        <span class="text-gray-300">|</span>
                        <a href="?lang=tr" class="<%= lang === 'tr' ? 'text-blue-600 font-bold' : 'text-gray-500' %> hover:text-gray-900 transition-all duration-200 ease-in-out">TR</a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="mx-auto max-w-4xl px-6 py-8 sm:px-8 lg:px-10">
            <div class="bg-white shadow-md rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-200 ease-in-out">
                <!-- Kopfbereich mit Foto und Namen -->
                <div class="p-8 bg-gray-50 border-b border-gray-200">
                    <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-6">
                        <% if (doctor.photo) { %>
                            <img src="/uploads/<%= doctor.photo %>" alt="Arztfoto" class="w-32 h-32 sm:w-48 sm:h-48 object-cover rounded-full shadow-md">
                        <% } else { %>
                            <div class="w-32 h-32 sm:w-48 sm:h-48 bg-gray-200 flex items-center justify-center rounded-full">
                                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        <% } %>
                        <div class="flex-1 text-center sm:text-left">
                            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                                <%= doctor.academicTitle ? doctor.academicTitle + ' ' : '' %><%= doctor.firstName || '' %> <%= doctor.lastName || '' %>
                            </h1>
                            <div class="text-lg text-gray-700">
                                <% 
                                    const specialtyText = getTranslatedSpecialty(doctor, lang);
                                %>
                                <div class="text-blue-600 font-semibold"><%= specialtyText || '' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Kontaktinformationen -->
                <div class="p-8 space-y-6">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('doctor.contact') %></h2>
                        <div class="space-y-3">
                            <p class="text-gray-700">
                                <span class="font-semibold text-gray-800"><%= t('doctor.address') %>:</span> <%= doctor.address %>
                                <% if (doctor.addressLine2) { %><br><span class="ml-20 text-gray-600"><%= doctor.addressLine2 %></span><% } %>
                            </p>
                            <p class="text-gray-700">
                                <span class="font-semibold text-gray-800"><%= t('doctor.phone') %>:</span> <%= doctor.phone %>
                            </p>
                            <% if (doctor.showEmail) { %>
                                <p class="text-gray-700">
                                    <span class="font-semibold text-gray-800"><%= t('doctor.email') %>:</span> 
                                    <a href="mailto:<%= doctor.email %>" class="text-blue-600 hover:text-blue-700 transition-all duration-200 ease-in-out"><%= doctor.email %></a>
                                </p>
                            <% } %>
                            <% if (doctor.website) { %>
                                <p class="text-gray-700">
                                    <span class="font-semibold text-gray-800"><%= t('doctor.website') %>:</span> 
                                    <a href="<%= doctor.website %>" target="_blank" class="text-blue-600 hover:text-blue-700 transition-all duration-200 ease-in-out">
                                        <%= doctor.website %>
                                    </a>
                                </p>
                            <% } %>
                        </div>
                    </div>

                    <% if (doctor.insurance && Object.keys(doctor.insurance).length > 0) { %>
                        <div class="mt-8">
                            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('doctor.insurance') %></h2>
                            <div class="space-y-2">
                                <% if (doctor.insurance.noContract) { %>
                                    <p class="text-gray-700 font-semibold"><%= t('doctor.privateOnly') %></p>
                                <% } else { %>
                                    <div class="flex flex-wrap gap-2">
                                        <% if (doctor.insurance.oegk) { %><span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-semibold text-blue-700 border border-blue-200">ÖGK</span><% } %>
                                        <% if (doctor.insurance.svs) { %><span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-semibold text-blue-700 border border-blue-200">SVS</span><% } %>
                                        <% if (doctor.insurance.bvaeb) { %><span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-semibold text-blue-700 border border-blue-200">BVAEB</span><% } %>
                                        <% if (doctor.insurance.kfa) { %><span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-semibold text-blue-700 border border-blue-200">KFA</span><% } %>
                                        <% if (!(doctor.insurance.oegk || doctor.insurance.svs || doctor.insurance.bvaeb || doctor.insurance.kfa)) { %>
                                            <span class="text-gray-700">Kassenvertrag</span>
                                        <% } %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>

                    <% if (doctor.additionalInfo) { %>
                        <div class="mt-8">
                            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('doctor.additionalInfo') %></h2>
                            <p class="text-gray-700 leading-relaxed"><%= doctor.additionalInfo %></p>
                        </div>
                    <% } %>

                    <% if (doctor.galleryPhotos && doctor.galleryPhotos.length > 0) { %>
                        <div class="mt-8">
                            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('doctor.gallery') %></h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <% doctor.galleryPhotos.forEach(photo => { %>
                                    <div class="relative overflow-hidden rounded-2xl shadow-md hover:shadow-lg transition-all duration-200 ease-in-out">
                                        <img src="/uploads/<%= photo %>" 
                                             alt="Ordinationsfoto" 
                                             class="w-full h-auto"
                                             style="aspect-ratio: 4/3; object-fit: cover;">
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>

                    <!-- Google Maps Box -->
                    <div class="mt-8">
                        <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('doctor.location') || 'Standort' %></h2>
                        <p class="text-gray-600 mb-4"><%= t('doctor.clickMapForDirections') || 'Klicken Sie auf die Karte, um die Route zu planen' %></p>
                        <div id="map" class="w-full h-80 rounded-2xl shadow-md"></div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Google Maps Script -->
    <script>
        // Map-Variablen
        let map;
        let marker;

        // Initialisiere Google Maps mit der Adresse des Arztes
        function initMap() {
            try {
                const mapDiv = document.getElementById('map');
                if (!mapDiv) return;

                // Adressdaten sammeln
                const fullAddress = `<%= doctor.address || '' %>, <%= doctor.addressLine2 || '' %>`.trim();
                
                // Wenn keine Adresse vorhanden ist, Wien als Standard anzeigen
                if (!fullAddress) {
                    const defaultPosition = { lat: 48.2082, lng: 16.3738 }; // Wien
                    map = new google.maps.Map(mapDiv, {
                        center: defaultPosition,
                        zoom: 13,
                        mapTypeControl: false
                    });
                    
                        // Info-Hinweis anzeigen
                        const infoDiv = document.createElement('div');
                        infoDiv.className = 'bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-xl mt-4';
                        infoDiv.innerHTML = '<p><%= t('doctor.noAddress') %></p>';
                        mapDiv.parentNode.insertBefore(infoDiv, mapDiv.nextSibling);
                    
                    return;
                }
                
                // Geocoding durchführen
                const geocoder = new google.maps.Geocoder();
                geocoder.geocode({ address: fullAddress + ', Österreich' }, function(results, status) {
                    if (status === google.maps.GeocoderStatus.OK && results[0]) {
                        const position = results[0].geometry.location;
                        
                        // Karte initialisieren
                        map = new google.maps.Map(mapDiv, {
                            center: position,
                            zoom: 15,
                            mapTypeControl: false
                        });
                        
                        // Marker hinzufügen
                        marker = new google.maps.Marker({
                            position: position,
                            map: map,
                            title: fullAddress
                        });
                        
                        // Info-Window mit Link für Routenplanung
                        const contentString = `
                            <div>
                                <h3 style="font-weight: bold; margin-bottom: 5px;"><%= t('doctor.location') %></h3>
                                <p>${fullAddress}</p>
                                <p style="margin-top: 10px;">
                                    <a href="https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(fullAddress + ', Österreich')}" 
                                       target="_blank" 
                                       style="color: #2563eb; text-decoration: none;">
                                        <%= t('doctor.routePlanning') %>
                                    </a>
                                </p>
                            </div>
                        `;
                        
                        const infoWindow = new google.maps.InfoWindow({
                            content: contentString
                        });
                        
                        // Öffne Info-Window beim Klick auf den Marker
                        marker.addListener('click', function() {
                            infoWindow.open(map, marker);
                        });
                        
                        // Info-Window initial öffnen
                        infoWindow.open(map, marker);
                    } else {
                        console.error('Geocoding fehlgeschlagen:', status);
                        
                        // Fallback auf Wien
                        const defaultPosition = { lat: 48.2082, lng: 16.3738 }; // Wien
                        map = new google.maps.Map(mapDiv, {
                            center: defaultPosition,
                            zoom: 12
                        });
                        
                        // Fehlermeldung anzeigen
                        const errorDiv = document.createElement('div');
                        errorDiv.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl mt-4';
                        errorDiv.innerHTML = '<p><%= t('doctor.addressNotFound') %></p>';
                        mapDiv.parentNode.insertBefore(errorDiv, mapDiv.nextSibling);
                    }
                });
            } catch (error) {
                console.error('Fehler bei der Karteninitialisierung:', error);
            }
        }

        // API laden
        function loadGoogleMapsAPI() {
            const script = document.createElement('script');
            script.src = `https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&callback=initMap&v=weekly`;
            script.async = true;
            script.defer = true;
            
            script.onerror = function() {
                console.error('Fehler beim Laden der Google Maps API');
                const mapDiv = document.getElementById('map');
                if (mapDiv) {
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl';
                    errorDiv.innerHTML = '<p>Google Maps konnte nicht geladen werden. Bitte versuchen Sie es später erneut.</p>';
                    mapDiv.parentNode.replaceChild(errorDiv, mapDiv);
                }
            };
            
            document.head.appendChild(script);
        }

        loadGoogleMapsAPI();
    </script>
</body>
</html>
